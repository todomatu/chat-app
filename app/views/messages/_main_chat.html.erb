<div class="main-content-head">
  <p>
    <%=@room.name%>
  </p>
  <div class="main-content-head-button">
    <%=link_to "チャットを終了する",room_path(@room.id),data: {turbo_method: :delete}%>
  </div>
</div>
<div class="main-content-item">
    <%=render partial: 'message', collection: @messages%>
</div>

<%= form_with model:[@room,@message],html: {class: "main-content-foot"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content,class:'main-content-foot-text',placeholder: 'type a message',required: true%>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image,class:'hidden'%>
    </label>
  </div>
  <%=f.submit '送信', class: 'main-content-foot-button'%>
<%end%>